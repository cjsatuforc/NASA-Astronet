<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="carriage">
    <inertial>
      <mass value="4.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1083" ixy="0.0" ixz="0.0" iyy="0.1083" iyz="0.0" izz="0.1083"/>
    </inertial>
    <visual name="carriage_visual">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://astrobee/media/meshes/carriage.dae"/>
      </geometry>
    </visual>
    <collision name="carriage_collision">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://astrobee/media/meshes/carriage.dae"/>
      </geometry>
    </collision>
  </link>
  <joint
    name="carriage_joint"
    type="fixed">
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <parent
      link="body" />
    <child
      link="carriage" />
  </joint>
  <gazebo reference="carriage">
    <mu1>0</mu1>
    <mu2>0</mu2>
  </gazebo>
</robot>