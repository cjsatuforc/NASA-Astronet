<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="tracker" params="serial xyz rpy">
    <link name="link_${serial}">
      <inertial>
        <mass value="0.2"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
      <visual name="body_visual">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://astrobee/media/meshes/tracker.dae"/>
        </geometry>
      </visual>
      <collision name="body_collision">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://astrobee/media/meshes/tracker.dae"/>
        </geometry>
      </collision>
    </link>
    <joint
      name="joint_${serial}"
      type="fixed">
      <origin
        xyz="${xyz}"
        rpy="${rpy}" />
      <parent
        link="body" />
      <child
        link="link_${serial}" />
    </joint>
  </xacro:macro>
</robot>